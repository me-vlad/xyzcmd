# Enabled plugins
# Syntax is:
#   {plugin_ns_path} > {ENABLE | DISABLE}

plugins {
	:misc:hello > ENABLE
	:core:keycodes > ENABLE
	:core:pluginlist > ENABLE
	:core:bindlist > ENABLE
	:ui:testinput > ENABLE
	:misc:about > ENABLE
}

