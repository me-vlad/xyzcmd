# 
# Default keybinds
#

load :core:keycodes:*
load :sys:run:shutdown
load :sys:logger:*
load :sys:cmd:*
load :core:pluginlist:show_list

bind :sys:cmd:execute to ENTER context @
bind :sys:cmd:history_prev to META-p context @
bind :sys:cmd:history_next to META-n context @
bind :sys:cmd:del_char_left to BACKSPACE context @
bind :sys:cmd:del_char to DELETE context @
bind :sys:cmd:del_word_left to META-u context @
bind :sys:cmd:del_word_right to META-k context @
bind :sys:cmd:clear to CTRL-p context @
bind :sys:cmd:clear_left to CTRL-u context @
bind :sys:cmd:clear_right to CTRL-k context @
bind :sys:cmd:cursor_begin to CTRL-a context @
bind :sys:cmd:cursor_end to CTRL-e context @
bind :sys:cmd:cursor_left to CTRL-b context @
bind :sys:cmd:cursor_right to CTRL-f context @
bind :sys:cmd:cursor_word_left to META-b context @
bind :sys:cmd:cursor_word_right to META-f context @
bind :sys:cmd:undo to CTRL-d context @
bind :sys:cmd:show_history to META-h context @

bind :sys:logger:show_console to META-l context PANEL
bind :sys:run:shutdown to F10 context PANEL
bind :core:pluginlist:show_list to META-t context PANEL
bind :core:keycodes:learn_keys to META-s context PANEL

#set chain key META-Q
#set chain key META-L context PANEL
#set chain key TAB-Q context TAB
