main := statements

statements := expression
           |  expression statements

expression := set_expression
           |  load_expression
           |  call_expression
           |  bind_expression
           |  define_expression
           |  hook_expression

set_expression := "set" variable string

load_expression := "load" plugin_path

call_expression := "call" plugin_method

plugin_path := ":sys:plugin"
plugin_method := plugin_path ":" method

bind_expression := "bind" plugin_method "to" shortcut [bind_context]?
shortcut := ?
bind_context := "context" string

define_expression := "define" variable "(" arguments ") define_body "end"
arguments := ?
define_body := statements

hook_expression := "hook" plugin_method "to" hook
hook := ?

bind <method> to <shortcut> [context <context>]

bind :usr:view-file(%f) to F3 context :sys:panel

############

<plugin>:
        :ns:path:method
        :ns:path:*
