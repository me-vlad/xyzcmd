# Default XYZ skin

AUTHOR: "Max E. Kuznecov <syhpoon@syhpoon.name>"
VERSION: "0.1"
DESCRIPTION: "XYZCommander monochrome skin"

# Filesystem objects

fs.type {
	file = LIGHT_GRAY
	dir = WHITE
	block = DARK_MAGENTA
	char = LIGHT_MAGENTA
	link = LIGHT_CYAN
	fifo = DARK_CYAN
	socket = DARK_RED
}

fs.regexp {
	'''.+\.core$''' = DARK_RED,BROWN
	'''\.+''' = LIGHT_GRAY
}

fs.priority {
	type = 1
   perm = 2
   regexp = 3
   owner = 4
}

### User interface objects

# Base widget
ui.widget {
	button = BLACK, LIGHT_GRAY
}

# Base box widgets
ui.box {
	&BG = LIGHT_GRAY

	title = WHITE, DEFAULT
	box = BLACK, &BG
	border = BLACK, &BG
	mount = DEFAULT, &BG
}

# Error message box
ui.error_box {
	&BG = DARK_RED

	title = WHITE, BLACK
	box = WHITE, &BG
	border = WHITE, &BG
	mount = WHITE, &BG
}

ui.panel {
	&BG = LIGHT_GRAY

	cwdtitle = BLACK, &BG
	cwdtitleinact = WHITE, DEFAULT
	panel = DEFAULT, DEFAULT
	cursor = BLACK, &BG
	info = WHITE, DEFAULT
	border = DEFAULT, DEFAULT
	tagged = WHITE, DEFAULT
}

# XYZListBox
ui.list_box {
	title = BLACK, LIGHT_GRAY
	selected = WHITE, DEFAULT
}

# Command line widget
ui.cmd {
	prompt = WHITE, DEFAULT
	text = LIGHT_GRAY, DEFAULT
}
