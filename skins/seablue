# Filesystem objects
fs.rules {
	&BG = DARK_BLUE

	# Broken links
	"type{link} and not link_exists{?}" = DARK_RED, &BG
	# Executables
	"type{file} and perm{+0111}" = LIGHT_GREEN, &BG
	# core files
	'''type{file} and name{".*\\.core$"}''' = DARK_RED, &BG
	# Hidden files
	'''name{"^\\.{1}[^.]"}''' = DARK_GRAY, &BG

	"type{file}" = LIGHT_GRAY, &BG
	"type{dir}" = WHITE, &BG
	"type{link}" = LIGHT_CYAN, &BG
	"type{socket}" = LIGHT_MAGENTA, &BG
	"type{fifo}" = LIGHT_BLUE, &BG
	"type{char}" = DARK_GRAY, &BG
	"type{block}" = DARK_MAGENTA, &BG
}

### User interface objects

# Base widget
ui.widget {
	button = DARK_BLUE, LIGHT_GRAY
}

# Base box widgets
ui.box {
	&BG = LIGHT_GRAY

	title = WHITE, DARK_BLUE
	box = BLACK, &BG
	border = DARK_BLUE, &BG
	mount = DEFAULT, &BG
}

# Error message box
ui.error_box {
	&FG = WHITE
	&BG = DARK_RED

	title = &FG, BLACK
	box = &FG, &BG
	border = &FG, &BG
	mount = &FG, &BG
}

# Input box
ui.input_box {
	input = WHITE, DARK_BLUE
}

# Panel widget
ui.panel {
	&BG = DARK_BLUE

	cwdtitle = BLACK, LIGHT_GRAY
	cwdtitleinact = WHITE, &BG
	panel = LIGHT_GRAY, &BG
	cursor = BLACK, LIGHT_GRAY
	search = WHITE, DARK_CYAN
	info = WHITE, &BG
	border = WHITE, &BG
	tagged = YELLOW, &BG
}

# XYZListBox
ui.list_box {
	title = DARK_BLUE, LIGHT_GRAY
	selected = WHITE, DARK_BLUE
}

# Command line widget
ui.cmd {
	&BG = DARK_BLUE

	prompt = WHITE, &BG
	text = LIGHT_GRAY, &BG
}

# Skin settings for :core:viewer plugin
plugin.viewer {
        &BG = DARK_BLUE

        statusbar = WHITE, DARK_CYAN
        window = WHITE, &BG
}