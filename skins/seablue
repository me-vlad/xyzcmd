### Filesystem objects

fs.combined {
	"type{file} and perm{+0111}" = LIGHT_GREEN, DARK_BLUE
}

fs.type {
	&BG = DARK_BLUE

	file = LIGHT_GRAY, &BG
	dir = WHITE, &BG
	link = LIGHT_CYAN, &BG
	socket = LIGHT_MAGENTA, &BG
	fifo = LIGHT_BLUE, &BG
	char = DARK_GRAY, &BG
	block = DARK_MAGENTA, &BG
}

fs.regexp {
	&BG = DARK_BLUE

	'''.*\.core$''' = DARK_RED, &BG
	'''\.{1}[^.]+''' = DARK_GRAY, &BG
}

fs.perm {
	2000 = LIGHT_GREEN, DARK_BLUE
}

fs.priority {
	type = 1
   perm = 2
   regexp = 3
   owner = 4
}

### User interface objects

# Base widget
ui.widget {
	button = DARK_BLUE, LIGHT_GRAY
}

# Base box widgets
ui.box {
	&BG = LIGHT_GRAY

	title = WHITE, DARK_BLUE
	box = BLACK, &BG
	border = DARK_BLUE, &BG
	mount = DEFAULT, &BG
}

# Error message box
ui.error_box {
	&FG = WHITE
	&BG = DARK_RED

	title = &FG, BLACK
	box = &FG, &BG
	border = &FG, &BG
	mount = &FG, &BG
}

# Input box
ui.input_box {
	input = WHITE, DARK_BLUE
}

# Panel widget
ui.panel {
	&BG = DARK_BLUE

	cwdtitle = BLACK, LIGHT_GRAY
	cwdtitleinact = WHITE, &BG
	panel = LIGHT_GRAY, &BG
	cursor = BLACK, LIGHT_GRAY
	info = WHITE, &BG
	border = WHITE, &BG
	tagged = YELLOW, &BG
}

# XYZListBox
ui.list_box {
	title = DARK_BLUE, LIGHT_GRAY
	selected = WHITE, DARK_BLUE
}

# Command line widget
ui.cmd {
	&BG = DARK_BLUE

	prompt = WHITE, &BG
	text = LIGHT_GRAY, &BG
}
