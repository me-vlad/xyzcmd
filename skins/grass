# Filesystem objects
fs.rules {
	&BG = DARK_GREEN

	"type{file} and perm{+0111}" = LIGHT_BLUE, &BG

	'''regexp{".*\\.core$"}''' = DARK_RED, &BG
	'''regexp{"^\\.{1}[^.]"}''' = DARK_GRAY, &BG

	"type{file}" = LIGHT_GRAY, &BG
	"type{dir}" = WHITE, &BG
	"type{link}" = LIGHT_CYAN, &BG
	"type{socket}" = LIGHT_MAGENTA, &BG
	"type{fifo}" = LIGHT_BLUE, &BG
	"type{char}" = DARK_GRAY, &BG
	"type{block}" = DARK_MAGENTA, &BG
}

### User interface objects

# Base widget
ui.widget {
	button = DARK_GREEN, LIGHT_GRAY
}

# Base box widgets
ui.box {
	&BG = LIGHT_GRAY

	title = &BG, DARK_GREEN
	box = BLACK, &BG
	border = DARK_GREEN, &BG
	mount = DEFAULT, &BG
}

# Error message box
ui.error_box {
	&FG = WHITE
	&BG = DARK_RED

	title = &FG, BLACK
	box = &FG, &BG
	border = &FG, &BG
	mount = &FG, &BG
}

# Input box
ui.input_box {
	input = WHITE, DARK_GREEN
}

# Panel widget
ui.panel {
	&BG = DARK_GREEN

	cwdtitle = BLACK, LIGHT_GRAY
	cwdtitleinact = WHITE, &BG
	panel = LIGHT_GRAY, &BG
	cursor = BLACK, LIGHT_GRAY
	info = WHITE, &BG
	border = WHITE, &BG
	tagged = LIGHT_CYAN, &BG
}

# XYZListBox
ui.list_box {
	title = DARK_GREEN, LIGHT_GRAY
	selected = WHITE, DARK_GREEN
}

# Command line widget
ui.cmd {
	&BG = DARK_GREEN

	prompt = WHITE, &BG
	text = LIGHT_GRAY, &BG
}
