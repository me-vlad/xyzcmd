# Default XYZ skin

AUTHOR: "Max E. Kuznecov <mek@mek.uz.ua>"
VERSION: "0.1"
DESCRIPTION: "Default XYZ skin"

# Filesystem objects

fs.type {
	file = LIGHT_GRAY
	dir = WHITE
	block = DARK_MAGENTA
	char = LIGHT_MAGENTA
	link = LIGHT_CYAN
	fifo = DARK_CYAN
	socket = DARK_RED
}

fs.regexp {
	'''.+\.core$''' = DARK_RED,BROWN
	'''\.+''' = LIGHT_GRAY
}

fs.priority {
	type = 1
   perm = 2
   regexp = 3
   owner = 4
}

### User interface objects

# Base widget
ui.widget {
	button = LIGHT_CYAN, BLACK
}

# Base box widgets
ui.box {
	title = LIGHT_CYAN, BLACK
	box = LIGHT_CYAN, BLACK
	mount = DEFAULT, LIGHT_GRAY
}

# Error message box
ui.error_box {
	title = WHITE, DARK_RED
	box = WHITE, DARK_RED
	mount = DEFAULT, LIGHT_GRAY
}

ui.panel {
	mount = DEFAULT, LIGHT_GRAY
	cwdtitle = LIGHT_CYAN, BLACK
	panel = DARK_CYAN, BLACK
	cursor = BLACK, LIGHT_GRAY
	info = BLACK, LIGHT_GRAY
	# :-)
	core = DARK_RED, BLACK
}
