# Filesystem objects

fs.type {
	file = LIGHT_GRAY
	dir = WHITE
	block = DARK_MAGENTA
	char = LIGHT_MAGENTA
	link = LIGHT_CYAN
	fifo = DARK_CYAN
	socket = DARK_RED
}

fs.regexp {
	'''.+\.core$''' = DARK_RED,WHITE
	'''\.+''' = LIGHT_GRAY
}

fs.priority {
	type = 1
   perm = 2
   regexp = 3
   owner = 4
}

# User interface objects

## For all box widgets
ui.box {
	mount = YELLOW, DARK_GREEN
	box =  WHITE, DARK_RED
	title = YELLOW, DARK_BLUE
}
