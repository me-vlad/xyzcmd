# Default XYZ skin

AUTHOR: "Max E. Kuznecov <mek@mek.uz.ua>"
VERSION: "0.1"
DESCRIPTION: "Default XYZ skin"

# Filesystem objects

fs.type {
	file = LIGHT_GRAY
	dir = WHITE
	block = DARK_MAGENTA
	char = LIGHT_MAGENTA
	link = LIGHT_CYAN
	fifo = DARK_CYAN
	socket = DARK_RED
}

fs.regexp {
	'''.+\.core$''' = DARK_RED,BROWN
	'''\.+''' = LIGHT_GRAY
}

fs.priority {
	type = 1
   perm = 2
   regexp = 3
   owner = 4
}

### User interface objects

# Base box widgets
ui.box {
	title = LIGHT_CYAN, DARK_BLUE
	box = WHITE, DARK_BLUE
	button = DARK_CYAN, DARK_BLUE
	mount = DEFAULT, DARK_CYAN
}
